<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center" >

        <!-- 나중에 뒤로가기로 변경 -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="설정"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="프로필 사진 변경"
                android:textSize="20dp" />

            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/addprofileImg"
                android:src="@drawable/camera_icon"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="닉네임 변겅"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                android:elevation="10dp" >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="변경할 닉네임 입력"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="소속 크루 변경"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>

            <Spinner
                android:id="@+id/spinner_settings_crew"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:gravity="center_horizontal"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="그레이드 변경"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>

            <Spinner
                android:id="@+id/spinner_settings_grade"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <Button
            android:id="@+id/kakao_logout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:textSize="20sp" />

        <Button
            android:id="@+id/kakao_unlink_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원 탈퇴"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>