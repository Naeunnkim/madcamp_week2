<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/memberID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아이디를 입력해주세요"
        android:inputType="textMultiLine"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"

        android:background="@drawable/round_back_groupabout"

        />
    <EditText
        android:id="@+id/memberPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"

        android:background="@drawable/round_back_groupabout"

        />
    <EditText
        android:id="@+id/memberEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일을 입력해주세요"
        android:inputType="textMultiLine"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"

        android:background="@drawable/round_back_groupabout"

        />
    <EditText
        android:id="@+id/memberNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="닉네임을 입력해주세요"
        android:inputType="textMultiLine"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"

        android:background="@drawable/round_back_groupabout"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="프로필 사진 추가"
            android:textSize="20dp" />

        <ImageButton
            android:layout_marginTop="10dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/addprofileImg"
            android:src="@drawable/camera_icon"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/buttonJoin"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:backgroundTint="#fe6f21"
            android:text="가입하기"
            android:textSize="17sp" />
        <Button
            android:id="@+id/buttonlogin"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:backgroundTint="#fe6f21"
            android:text="기존 아이디로 로그인"
            android:textSize="10sp" />

    </LinearLayout>




</LinearLayout>